<table class='table'>
  <tr><%= image_tag user.get_profile_image, size:'100x100' %></tr>
  <tr>
	  <th>name</th>
	  <th><%= user.name %></th>
  </tr>
  <tr>
	  <th>introduction</th>
	  <th><%= user.introduction %></th>
  </tr>
  <tr>
    <th>
      follows
    </th>
    <th>
      <%= link_to user.follower.count, follows_user_path(user.id) %>
    </th>
  </tr>
  <tr>
    <th>
      followers
    </th>
    <th>
      <%= link_to user.followed.count, followers_user_path(user.id) %>
    </th>
  </tr>
</table>

<% if user == current_user %>
  <div class='row'>
      <%= link_to edit_user_path(user), class: "btn btn-outline-secondary btn-block" do %>
        <i class="fas fa-user-cog"></i>
  </div>
<% elsif user.following?(user) %>
    <%= link_to 'フォローを外す', user_relationships_path(user.id), method: :delete, class: 'btn btn-info' %>
<% else %>
    <%= link_to 'フォローする', user_relationships_path(user.id), method: :post, class: 'btn btn-success' %>
<% end %>