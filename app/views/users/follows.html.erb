<h2>Follow Users</h2>
<table class="table">
  <% if @users.exists? %>
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
    <tr>
      <td><%= image_tag user.get_profile_image, size: '50x50' %></td>
      <td><%= user.name %></td>
      <td><%= user.follower.count %></td>
      <td><%= user.followed.count %></td>
      <td><%= link_to "Show", user_path(user.id) %></td>
    </tr>
    <% end %>
  <% else %>
    <p>ユーザーはいません</p>
  <% end %>
  </tbody>
</table>